package twui

import "github.com/Oudwins/tailwind-merge-go/pkg/twmerge"

type ThemeToggleIcon int

const (
	Classic ThemeToggleIcon = iota
	InnerMoon
	Expand
	Within
	Around
	DarkSide
	Horizon
	Eclipse
	Lightbulb
	DarkInner
	HalfSun
	Simple
)

var themeToggles = map[ThemeToggleIcon]func() templ.Component{
	0:  toggleClassic,
	1:  toggleInnerMoon,
	2:  toggleExpand,
	3:  toggleWithin,
	4:  toggleAround,
	5:  toggleDarkSide,
	6:  toggleHorizon,
	7:  toggleEclipse,
	8:  toggleLightbulb,
	9:  toggleDarkInner,
	10: toggleHalfSun,
	11: toggleSimple,
}

type ThemeToggleProps struct {
	// Optional: Adds classes to the parent <label> element.
	// Tailwind classes specified here will take precedence over existing competing classes.
	Class string

	// Optional: Specifies which icon to use, defaults to classic.
	Icon ThemeToggleIcon
}

// ThemeToggle renders a clickable animated theme toggle element.
// Best used with the DetectTheme component place in the <head> of your document.
// Change the text size of the label to change the icon size, defaults to 3rem.
// NOTE:
// This component requires JavaScript to function.
templ ThemeToggle(props ThemeToggleProps) {
	<label
		id="theme-toggle-label"
		class={ twmerge.Merge("inline-block cursor-pointer text-5xl", props.Class) }
		role="button"
		aria-label="theme toggle"
		tabindex="0"
	>
		<input type="checkbox" id="theme-toggle" class="hidden"/>
		@themeToggles[props.Icon]()
	</label>
	{{ nonce := templ.GetNonce(ctx) }}
	<script if nonce != "" {
	nonce={ nonce }
}>
		const label = document.querySelector("#theme-toggle-label");
		const toggle = document.querySelector("#theme-toggle");

		label.addEventListener("keypress", (e) => {
			e.code === "Space" && toggle.click();
		})

		toggle.addEventListener("click", (e) => {
			document.documentElement.classList.toggle("dark");
			localStorage.setItem("theme", e.target.checked ? "dark" : "light");
		})
	</script>
}

// DetectTheme checks for a cached theme or system preference and applies the styles.
// Place this script in the <head> of your document, use in conjunction with the ThemeToggle component.
// NOTE:
// This component requires JavaScript to function.
// This component is CSP compliant, use the WithNonce middleware where required.
templ DetectTheme() {
	{{ nonce := templ.GetNonce(ctx) }}
	<script if nonce != "" {
	nonce={ nonce }
}>
		// check for a cached theme or system theme preference
		let theme = localStorage.getItem("theme") ??
			(window.matchMedia("(prefers-color-scheme: dark)").matches ? "dark" : "light");

		// apply color theme
		document.documentElement.classList.toggle("dark", theme === "dark");

		// check the toggle checkbox if present
		document.addEventListener("DOMContentLoaded", () => {
			const toggle = document.querySelector("#theme-toggle");
			if (toggle !== null) toggle.checked = theme === "dark";
		}, { once: true })
	</script>
}

